<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Capin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:includeFontPadding">false</item>
        <!-- Customize your theme here. -->

    </style>


    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>

    </style>

    <style name="shapeapperance_circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="mypage_review_cafe_image">
        <item name="cornerSize">5%</item>
    </style>

    <style name="MyPageTabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>                                <!-- 배경 -->

        <item name="android:textColorPrimary">@color/pointcolor_1</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@color/gray_2</item>     <!-- 탭바 텍스트 -->

        <item name="colorAccent">@color/pointcolor_1</item>                    <!-- 하단 움직이는 바 색-->
    </style>


    <style name="CapinRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/layerlist_rating</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">45dp</item>
    </style>

    <style name="CollapsedTitleStyle" parent="Headline1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ExpandedTitleStyle" parent="Headline1">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textSize">0.1sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
