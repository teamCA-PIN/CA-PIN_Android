<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.caffeine.capin.profile.MapProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/subcolor_blue_1"
        tools:context=".profile.MapProfileFragment">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_icon_close_white"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_cafeti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cafeti_asset"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_nickName"
            style="@style/Headline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@{viewModel.userInfo.nickName}"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_cafeti"
            tools:text="김카핀" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            style="@style/Body3"
            android:text="@{viewModel.userInfo.email}"
            android:textColor="@color/gray_4"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/textview_nickName"
            app:layout_constraintStart_toStartOf="@id/textview_nickName"
            app:layout_constraintEnd_toEndOf="@id/textview_nickName"
            tools:text="capin@teamcapin.com"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_cafeti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_cafeti_tag"
            style="@style/Body3"
            android:paddingHorizontal="8dp"
            android:text="@{viewModel.userInfo.cafeti}"
            android:layout_marginTop="11dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/textview_email"
            app:layout_constraintStart_toStartOf="@id/textview_email"
            app:layout_constraintEnd_toEndOf="@id/textview_email"
            tools:text="WBFJ"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_archive"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_archive_info"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:0.575"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_cafeti"
            app:layout_constraintVertical_bias="0.098"
            app:layout_constraintWidth_percent="0.55">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_archive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="20dp"
                android:text="아카이브"
                style="@style/Subhead"
                android:textColor="@color/pointcolor_1"
                android:textSize="16dp"
                android:theme="@style/Subhead"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_archive"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/ic_icon_back_1616"
                app:layout_constraintBottom_toBottomOf="@id/textview_archive"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textview_archive" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="핀"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray_4"
                android:textSize="14dp"
                style="@style/Body2"
                app:layout_constraintBottom_toTopOf="@+id/textview_feed"
                app:layout_constraintStart_toStartOf="@id/textview_archive"
                app:layout_constraintTop_toBottomOf="@+id/textview_archive" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="피드"
                android:textColor="@color/gray_4"
                android:textSize="14dp"
                style="@style/Body2"
                app:layout_constraintStart_toStartOf="@id/textview_pin"
                app:layout_constraintTop_toBottomOf="@+id/textview_pin" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_pin_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(viewModel.userInfo.pinNum)}"
                android:textColor="@color/subcolor_blue_4"
                android:textSize="14dp"
                style="@style/Body2"
                app:layout_constraintEnd_toEndOf="@id/button_archive"
                app:layout_constraintTop_toTopOf="@id/textview_pin"
                tools:text="25" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_feed_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(viewModel.userInfo.reviewNum)}"
                android:textColor="@color/subcolor_blue_4"
                android:textSize="14dp"
                style="@style/Body2"
                app:layout_constraintEnd_toEndOf="@id/textview_pin_count"
                app:layout_constraintTop_toTopOf="@id/textview_feed"
                tools:text="17" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pointcolor_1"
            style="@style/Body2"
            android:textSize="14dp"
            app:layout_constraintVertical_bias="0.215"
            android:text="@string/terms_and_policy"
            app:layout_constraintTop_toBottomOf="@id/constraintlayout_archive"
            app:layout_constraintStart_toStartOf="@id/constraintlayout_archive"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/constraintlayout_archive" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pointcolor_1"
            style="@style/Body2"
            android:layout_marginTop="7dp"
            android:textSize="14dp"
            android:text="@string/logout"
            app:layout_constraintTop_toBottomOf="@id/textview_terms"
            app:layout_constraintStart_toStartOf="@id/textview_terms"
            app:layout_constraintEnd_toEndOf="@id/textview_terms" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_3"
            style="@style/Sub"
            android:textSize="8dp"
            android:text="@string/copyright"
            app:layout_constraintVertical_bias="0.18"
            app:layout_constraintTop_toBottomOf="@id/textview_logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
