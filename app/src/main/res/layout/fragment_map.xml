<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapFragment">

    <com.caffeine.capin.customview.CapinToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.naver.maps.map.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <RadioGroup
        android:id="@+id/radiogroup_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.611"
        app:layout_constraintDimensionRatio="1:0.223"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.9"
        android:orientation="horizontal"
        android:checkedButton="@id/radiobutton_capin_map"
        android:gravity="center"
        android:paddingVertical="6dp"
        android:paddingHorizontal="6dp"
        android:background="@drawable/background_map_radio_group"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radiobutton_capin_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카핀맵"
            android:textColor="@color/selector_map_toggle_text"
            android:button="@null"
            android:textSize="14sp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@drawable/selector_map_toggle"/>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radiobutton_my_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이맵"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@color/selector_map_toggle_text"
            android:button="@null"
            android:background="@drawable/selector_map_toggle"/>

    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>