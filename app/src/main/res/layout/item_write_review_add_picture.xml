<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@drawable/background_add_picture">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_add_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_picture_plus"
        app:layout_constraintBottom_toTopOf="@+id/textview_add_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_add_picture"
        android:theme="@style/Body5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(최대 5장)"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imageview_add_picture"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/imageview_add_picture"
        app:layout_constraintTop_toBottomOf="@+id/imageview_add_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>