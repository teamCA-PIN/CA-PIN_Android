<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.caffeine.capin.presentation.customview.CapinToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_service_terms"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="이용약관"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="18dp"
            android:background="@drawable/terms_button_box"
            android:layout_marginTop="13dp"
            android:drawableRight="@drawable/ic_icon_nextbtn"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_personal_info_terms"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="개인정보처리방침"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="18dp"
            android:background="@drawable/terms_button_box"
            android:drawableRight="@drawable/ic_icon_nextbtn"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/textview_service_terms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_ask"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="문의하기"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="18dp"
            android:background="@drawable/terms_button_box"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/textview_personal_info_terms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="teamcapin@gmail.com"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/gray_4"
            app:layout_constraintTop_toTopOf="@id/textview_ask"
            app:layout_constraintBottom_toBottomOf="@id/textview_ask"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_version"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="버전"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="18dp"
            android:background="@drawable/terms_button_box"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/textview_ask"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_version_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/gray_4"
            app:layout_constraintTop_toTopOf="@id/textview_version"
            app:layout_constraintBottom_toBottomOf="@id/textview_version"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="현재1.0/최신1.0"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_withdraw"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="회원 탈퇴하기"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="18dp"
            android:background="@drawable/terms_button_box"
            android:drawableRight="@drawable/ic_icon_nextbtn"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/pointcolor_1"
            app:layout_constraintTop_toBottomOf="@id/textview_version"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
