<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/category_color_selected_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/category_selected_circle_iv"
        app:layout_constraintStart_toStartOf="@id/category_selected_circle_iv"
        app:layout_constraintEnd_toEndOf="@id/category_selected_circle_iv"
        app:layout_constraintBottom_toBottomOf="@id/category_selected_circle_iv"
        app:shapeAppearanceOverlay="@style/mypage_profile_circle"/>

    <ImageView
        android:id="@+id/category_selected_circle_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/border_circle_gray_2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>