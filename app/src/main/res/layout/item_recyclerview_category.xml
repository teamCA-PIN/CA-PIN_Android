<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_mypage_category">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/rcv_category_color_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.08"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="26dp"
            android:layout_marginVertical="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/shapeapperance_circle" />

        <TextView
            android:id="@+id/rcv_category_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기본 카테고리"
            android:theme="@style/Body4"
            android:textColor="@color/black"
            android:layout_marginStart="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/rcv_category_color_iv"
            app:layout_constraintStart_toEndOf="@+id/rcv_category_color_iv"
            app:layout_constraintTop_toTopOf="@+id/rcv_category_color_iv" />

        <TextView
            android:id="@+id/rcv_category_pin_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/gray_4"
            android:theme="@style/Body5"
            app:layout_constraintBottom_toBottomOf="@+id/rcv_category_num_tv"
            app:layout_constraintEnd_toStartOf="@id/rcv_category_num_tv"
            app:layout_constraintTop_toTopOf="@+id/rcv_category_num_tv" />

        <TextView
            android:id="@+id/rcv_category_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/100"
            android:textColor="@color/gray_4"
            android:theme="@style/Body5"
            android:layout_marginEnd="43dp"
            app:layout_constraintBottom_toBottomOf="@+id/rcv_category_edit_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rcv_category_edit_btn" />

        <ImageView
            android:id="@+id/rcv_category_edit_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.078"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_edit_vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>